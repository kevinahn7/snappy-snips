@{
    ViewData["Title"] = "Specialties";
}

<h2>All of our specialties</h2>

<a href="/specialties/add"><button>Add a specialty</button></a>


<div class="specialtiesGrid">


    @foreach (var specialty in Model)
    {
    <div>
        <a href="/specialties/@specialty.Id">@specialty.Name</a>
        <a href="/specialties/@specialty.Id/delete"><button>Delete</button></a>
    </div>
    }
</div>

<form action="/specialties/delete" method="post">
    <button type="submit">Delete all specialties</button>
</form>






<a href="/"><button>Home</button></a>