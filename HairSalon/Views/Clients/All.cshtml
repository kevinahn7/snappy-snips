
@{
    ViewData["Title"] = "All";
}

<h2>All clients</h2>

@foreach (var client in Model)
{
    <div>
        <a href="/clients/@client.Id">@client.Name</a>
        <a href="/clients/@client.Id/delete"><button>Delete</button></a>
    </div>
}

<form action="/clients/delete" method="post">
    <button type="submit">Delete all clients</button>
</form>

<a href="/clients"><button>Back</button></a>